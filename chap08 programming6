import java.text.SimpleDateFormat;
import java.util.Date;

public class CalendarDemo {
    public static void main(String[] args) {
        Date now = new Date();

        SimpleDateFormat s1 = new SimpleDateFormat("yyyy.MM.dd 오후 hh:mm:ss");
        System.out.println(s1.format(now));
        SimpleDateFormat s2 = new SimpleDateFormat("오늘은 M월의 dd번째 날");
        System.out.println(s2.format(now));
        SimpleDateFormat s3 = new SimpleDateFormat("오늘은 yyyy년의 DDD번째 날");
        System.out.println(s3.format(now));
    }
}
